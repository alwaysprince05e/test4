pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build') {
            steps {
                echo 'Build stage - No specific build step required for Node.js'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy stage - Implement deployment steps here'
            }
        }
    }
}
