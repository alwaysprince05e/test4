pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/alwaysprince05e/test4.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test || echo "No tests defined"'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy stage - Implement deployment steps here'
            }
        }
    }
}
    }
}

